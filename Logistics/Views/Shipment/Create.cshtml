@model Logistics.Models.Shipment
@{
    ViewData["Title"] = "Create Shipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-2xl font-bold text-gray-800 mb-6">Create Shipment</h2>

<div class="bg-white p-6 rounded-lg shadow-md">
    <form asp-action="Create" asp-controller="Shipment" method="post" class="space-y-6">
        @Html.AntiForgeryToken()

        <!-- AWB -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="relative">
                <input asp-for="AWB" name="AWB" class="peer block w-full rounded-md border-gray-300 shadow-sm focus:border-b-2 focus:border-blue-500 focus:ring-0 pt-6 pb-1.5 pl-6" placeholder=" " required />
                <label asp-for="AWB" class="absolute left-6 top-1 text-sm text-gray-500 transition-all duration-200 peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-base peer-focus:top-1 peer-focus:text-sm peer-focus:text-blue-500">AWB</label>
                <span asp-validation-for="AWB" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>

        <!-- Sender Information -->
        <h3 class="text-lg font-semibold mt-6 text-gray-800">Sender Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="relative">
                <input asp-for="SenderName" name="SenderName" class="peer block w-full rounded-md border-gray-300 shadow-sm focus:border-b-2 focus:border-blue-500 focus:ring-0 pt-6 pb-1.5 pl-6" placeholder=" " required />
                <label asp-for="SenderName" class="absolute left-6 top-1 text-sm text-gray-500 transition-all duration-200 peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-base peer-focus:top-1 peer-focus:text-sm peer-focus:text-blue-500">Sender Name</label>
                <span asp-validation-for="SenderName" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div class="relative">
                <input asp-for="SenderPhone" name="SenderPhone" class="peer block w-full rounded-md border-gray-300 shadow-sm focus:border-b-2 focus:border-blue-500 focus:ring-0 pt-6 pb-1.5 pl-6" placeholder=" " required />
                <label asp-for="SenderPhone" class="absolute left-6 top-1 text-sm text-gray-500 transition-all duration-200 peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-base peer-focus:top-1 peer-focus:text-sm peer-focus:text-blue-500">Sender Phone</label>
                <span asp-validation-for="SenderPhone" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="relative">
                <textarea asp-for="SenderAddress" name="SenderAddress" class="peer block w-full rounded-md border-gray-300 shadow-sm focus:border-b-2 focus:border-blue-500 focus:ring-0 pt-6 pb-1.5 pl-6 h-20" placeholder=" " required></textarea>
                <label asp-for="SenderAddress" class="absolute left-6 top-1 text-sm text-gray-500 transition-all duration-200 peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-base peer-focus:top-1 peer-focus:text-sm peer-focus:text-blue-500">Sender Address</label>
                <span asp-validation-for="SenderAddress" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div class="relative">
                <input asp-for="SenderPostcode" name="SenderPostcode" class="peer block w-full rounded-md border-gray-300 shadow-sm focus:border-b-2 focus:border-blue-500 focus:ring-0 pt-6 pb-1.5 pl-6" placeholder=" " required />
                <label asp-for="SenderPostcode" class="absolute left-6 top-1 text-sm text-gray-500 transition-all duration-200 peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-base peer-focus:top-1 peer-focus:text-sm peer-focus:text-blue-500">Sender Postcode</label>
                <span asp-validation-for="SenderPostcode" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>

        <!-- Recipient Information -->
        <h3 class="text-lg font-semibold mt-6 text-gray-800">Recipient Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="relative">
                <input asp-for="RecipientName" name="RecipientName" class="peer block w-full rounded-md border-gray-300 shadow-sm focus:border-b-2 focus:border-blue-500 focus:ring-0 pt-6 pb-1.5 pl-6" placeholder=" " required />
                <label asp-for="RecipientName" class="absolute left-6 top-1 text-sm text-gray-500 transition-all duration-200 peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-base peer-focus:top-1 peer-focus:text-sm peer-focus:text-blue-500">Recipient Name</label>
                <span asp-validation-for="RecipientName" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div class="relative">
                <input asp-for="RecipientPhone" name="RecipientPhone" class="peer block w-full rounded-md border-gray-300 shadow-sm focus:border-b-2 focus:border-blue-500 focus:ring-0 pt-6 pb-1.5 pl-6" placeholder=" " required />
                <label asp-for="RecipientPhone" class="absolute left-6 top-1 text-sm text-gray-500 transition-all duration-200 peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-base peer-focus:top-1 peer-focus:text-sm peer-focus:text-blue-500">Recipient Phone</label>
                <span asp-validation-for="RecipientPhone" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="relative">
                <textarea asp-for="RecipientAddress" name="RecipientAddress" class="peer block w-full rounded-md border-gray-300 shadow-sm focus:border-b-2 focus:border-blue-500 focus:ring-0 pt-6 pb-1.5 pl-6 h-20" placeholder=" " required></textarea>
                <label asp-for="RecipientAddress" class="absolute left-6 top-1 text-sm text-gray-500 transition-all duration-200 peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-base peer-focus:top-1 peer-focus:text-sm peer-focus:text-blue-500">Recipient Address</label>
                <span asp-validation-for="RecipientAddress" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div class="relative">
                <input asp-for="RecipientPostcode" name="RecipientPostcode" class="peer block w-full rounded-md border-gray-300 shadow-sm focus:border-b-2 focus:border-blue-500 focus:ring-0 pt-6 pb-1.5 pl-6" placeholder=" " required />
                <label asp-for="RecipientPostcode" class="absolute left-6 top-1 text-sm text-gray-500 transition-all duration-200 peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-base peer-focus:top-1 peer-focus:text-sm peer-focus:text-blue-500">Recipient Postcode</label>
                <span asp-validation-for="RecipientPostcode" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>

        <!-- Package Information -->
        <h3 class="text-lg font-semibold mt-6 text-gray-800">Package Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="relative">
                <input asp-for="Weight" name="Weight" type="number" step="0.01" class="peer block w-full rounded-md border-gray-300 shadow-sm focus:border-b-2 focus:border-blue-500 focus:ring-0 pt-6 pb-1.5 pl-6" placeholder=" " required />
                <label asp-for="Weight" class="absolute left-6 top-1 text-sm text-gray-500 transition-all duration-200 peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-base peer-focus:top-1 peer-focus:text-sm peer-focus:text-blue-500">Weight (kg)</label>
                <span asp-validation-for="Weight" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div class="relative">
                <input asp-for="Dimension" name="Dimension" class="peer block w-full rounded-md border-gray-300 shadow-sm focus:border-b-2 focus:border-blue-500 focus:ring-0 pt-6 pb-1.5 pl-6" placeholder=" " required />
                <label asp-for="Dimension" class="absolute left-6 top-1 text-sm text-gray-500 transition-all duration-200 peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-base peer-focus:top-1 peer-focus:text-sm peer-focus:text-blue-500">Dimension</label>
                <span asp-validation-for="Dimension" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-end">
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">
                Create Shipment
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
